  <body class="checkout-page">
   
    
     
    
    
    <div class="container">
        <div class="row">
            
            <!--  ==========  -->
            <!--  = Main content =  -->
            <!--  ==========  -->
            <section class="span12">
                
                <div class="checkout-container">
                    <div class="row">
                    	<div class="span10 offset1">
                    	    
                    	    <!--  ==========  -->
							<!--  = Header =  -->
							<!--  ==========  -->
                    		<header>
                    		    <div class="row">
                    		    	<div class="span2">
                    		    		<a href="/"><img src="/images/logo-bw.png" alt="Webmarket Logo" width="48" height="48" /></a>
                    		    	</div>
                    		    	<div class="span6">
                    		    	    <div class="center-align">
                                            <h1><a href="/">Célia Jóias</a></h1>
                                            <hr />
                    		    	        <h2><span class="light">Confirmar </span>Compra</h2>
                    		    	    </div>
                    		    	</div>
                    		    	<div class="span2">
                    		    	    <div class="right-align">
                                            <a href="https://pagseguro.uol.com.br/para_voce/como_funciona.jhtml" target="_blank"><img src="/images/buttons/segura.png" alt="Compra Segura"  /> </a>
                    		    	    </div>
                    		    	</div>
                    		    </div>
                    		</header>
                    		
                    		<!--  ==========  -->
							<!--  = Steps =  -->
							<!--  ==========  -->
                    		<div class="checkout-steps">
                    		    <div class="clearfix">
                    		    	<div class="step done">
                    		    	    <div class="step-badge"><i class="icon-ok"></i></div>
                    		    	    <a href="/compra/etapa-1">Sacola de Compras</a>
                    		    	</div>
                    		    	<div class="step done">
                                        <div class="step-badge"><i class="icon-ok"></i></div>
                                        <a href="/compra/etapa-2">Identificação</a>
                                    </div>
                    		    	<div class="step done">
                    		    	    <div class="step-badge"><i class="icon-ok"></i></div>
                    		    	    <a href="/compra/etapa-3">Endereço de Entrega</a>
                    		    	</div>
                    		    	<div class="step active">
                    		    	    <div class="step-badge">4</div>
                    		    	    Confirmar Compra
                    		    	</div>
                    		    </div>
                    		</div> <!-- /steps -->
                    		
                    		<!--  ==========  -->
							<!--  = Selected Items =  -->
							<!--  ==========  -->
							<table class="table table-items">
							    <thead>
							    	<tr>
							    		<th colspan="2">Item</th>
							    		<th><div class="align-center">Quantidade</div></th>
							    		<th><div class="align-right">Preço</div></th>
							    	</tr>
							    </thead>
							    <tbody>
                                @foreach (var item in carrinho.Itens)
                                {<text>					         
							        <tr>
							        	<td class="image"><img STYLE="width:62px; height:62px" src="~/images/produtos/mini_@FuncaoProdutos.Produto_Imagem(item.ProdutoID)" alt="" width="124" height="124" /></td>
							        	<td class="desc">@FuncaoProdutos.Produto_Titulo(item.ProdutoID) &nbsp; <a title="Remove Item" class="icon-remove-sign" href="#"></a></td>
							        	<td class="qty">
							        	    <input type="text" class="tiny-size" value="1" />
					            	    </td>
							        	<td class="price">
							        	    @String.Format("{0:C}", FuncaoProdutos.Produto_Preco(item.ProdutoID))
							        	</td>
							        </tr>
							    </text>}

							      <tr>
							        <td colspan="2" rowspan="2">
							        	    &nbsp;
							        	</td>
							        	<td class="stronger">Frete:</td>
							        	<td class="stronger"><div class="align-right">0.00</div></td>

							        </tr>

							        <tr>

							        	<td class="stronger">Subtotal:</td>
							        	<td class="stronger"><div class="size-16 align-right">@String.Format("{0:C}", carrinho.ValorTotal)</div></td>
							        </tr>

							    </tbody>
							</table>
							
                            

                            <div class="alert alert-info in fade">
                            
                            <h4>Endereço de Entrega</h4>
                            <p>@carrinho.Logradouro. @carrinho.Numero<br>
                            @if(carrinho.Complemento != ""){
                            <text>
                            carrinho.Complemento <br>                                                            
                            </text>
                            }
                            @carrinho.Bairro<br>
                            @carrinho.Cidade<br>
                            @carrinho.Cep - @carrinho.Estado</p>


                            </div>




                            <hr />
							<p class="right-align">
							    <a href="/" class="btn btn-primary higher bold">Confirmar Compra</a>
							</p>
                    	</div>
                    </div>
                </div>
                
                
            </section> <!-- /main content -->
        
